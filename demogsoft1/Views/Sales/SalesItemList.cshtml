                <td>
                    @Html.DisplayFor(modelItem => item.IGSTPrc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IGSTAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MRP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIscPrc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NetAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VoucherDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mstItem.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mstTax.TaxName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trnSale.SalesType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditSalesItem", new { id = item.SalesItemId },new {@class="btn btn-primary"}) 
                    @Html.ActionLink("Details", "DetailsSalesAccount", new { id = item.SalesItemId },new {@class="btn btn-success"}) 
                    @Html.ActionLink("Delete", "DeletesalesItem", new { id = item.SalesItemId },new {@class="btn btn-danger"})
                </td>
            </tr>
        }
    }
else
            {
                <p>No data in model</p>
            }
    </table>
<div>
    @Html.ActionLink("Period Report", "GetSalesDate", "Sales", new { @class = "btn btn-primary" }) |
