@model IEnumerable<demogsoft1.Models.trnSalesItem>

@{
    ViewBag.Title = "Sales Item List";
}

<h2>Sales Item List</h2>

<p>
    @Html.ActionLink("Create New", "AddSalesItem", "Sales", new { @class = "btn btn-primary" })
    @Html.ActionLink("Add New Account", "AddSaleAccount", "Sales", new { @class = "btn btn-warning" })
</p>
