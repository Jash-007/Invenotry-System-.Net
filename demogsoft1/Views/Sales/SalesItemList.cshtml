        </th>
        <th>
            @Html.DisplayNameFor(model => model.IGSTPrc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IGSTAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MRP)
        </th>
